        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
        <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">

        <!--Google Font-->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Urbanist:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+Mono:wght@100..900&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Freeman&family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">

        <!--FontAwesome-->
        <script src="https://kit.fontawesome.com/e2d250d66b.js" crossorigin="anonymous"></script>
    </head>

    <body>
        <!--Navbar-->
        <nav class="navbar fixed-top navbar-expand-lg bg-body tertiary">
            <div class="container-fluid">
                <!--Home: Note and Go-->
                <a class="navbar-brand" href="/home"> Note and Go <i class="fa-brands fa-stack-overflow";></i> </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span> <!--Toggle Icon-->
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-expanded="false">About</a>
                            <!--dropdown submenu-->
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/about">The App</a></li>
                                <li><a class="dropdown-item" href="/download" target="_blank">Downloads</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" href="/media">Media</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link disabled" aria-disabled="true">New Version Winter 2024</a>
                        </li>
                    </ul>

                    <!--Second Navbar-->
                    <ul class="navbar-nav ms-auto"> <!--ms-auto: ALigns elements to the right within a flex container-->
                        <li class="nav-item">
                            <a class="nav-link" href="/signup">Sign Up</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/login">My Account</a>
                        </li>
                    </ul>
                </div>
                <!--Logout Button-->
                <a href="/logout" class="btn">Sign Out</a>
            </div>
        </nav>


        <main>
            <h1> <strong style="font-family: Freeman, sans-serif;">Welcome to Note and Go <i class="bi bi-stack-overflow"></i> </strong> <i style="font-size: 28px;">the minimalist note-taking app</i></h1>
            <div class="todo-app">
            
                <!--Add New Task Btn-->
                <button id="open-task-form-btn" class="btn large-btn">
                    Add New Note
                </button>
            </br>
                <form class="task-form hidden" id="task-form">
                    <div class="task-form-header">
                        <button id="close-task-form-btn" class="close-task-form-btn" type="button" aria-label="close">
                            <svg class="close-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 48 48" width="48px" height="48px"><path fill="#F44336" d="M21.5 4.5H26.501V43.5H21.5z" transform="rotate(45.001 24 24)" /><path fill="#F44336" d="M21.5 4.5H26.5V43.501H21.5z" transform="rotate(135.008 24 24)" /></svg>
                        </button>
                    </div>
                    <!--Note Form-->
                    <div class="task-form-body">
                        <!--Note title-->
                        <label class="task-form-label" for="title-input">
                            Title
                        </label>
                        <input required type="text" class="form-control" id="title-input" value="" />
                        <!--Note Date-->
                        <label class="task-form-label" for="date-input">
                            Date
                        </label>
                        <input type="date" class="form-control" id="date-input" value="" />
                        <!--Note Description-->
                        <label class="task-form-label" for="description-input">
                            Description
                        </label>
                        <textarea class="form-control" id="description-input" cols="30" rows="5"></textarea>
                    </div>
                    <!--Footer-->
                    <div class="task-form-footer">
                        <button id="add-or-update-task-btn" class="btn large-btn" type="submit">
                            Add Note
                        </button>
                    </div>
                </form>
                <!--Warning Unsaved Changes Message-->
                <dialog id="confirm-close-dialog">
                    <form method="dialog">
                        <p class="discard-message-text">
                            Discard unsaved changes?
                        </p>
                        <div class="confirm-close-dialog-btn-container">
                            <button id="cancel-btn" class="btn">
                                Cancel
                            </button>
                            <button id="discard-btn" class="btn">
                                Discard
                            </button>
                        </div>
                    </form>
                </dialog>
                <div class="task" id="tasks-container">
                    <% notes.forEach(note => { %>
                        <div class="note">
                            <h2><%= note.title %></h2>
                            <p><%= note.description %></p>
                            <small><%= note.date.toDateString() %></small>
                        </div>
                    <% }) %>
                </div>
            </div>
        </main>

        <!--Footer-->
        <footer class="footer">
            <p>
                123 Free Code Camp Drive, Burnaby, BC, Canada | All rights reserved | <i class="fa-solid fa-copyright"></i> <i class="fa-solid fa-r"></i>
            </p>
        </footer>

        <!--Script-->
        <script src="/script.js"></script>

        <!--Script for Navbar-->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Optional: Add event listeners for custom behavior
            var navbarToggler = document.querySelector('.navbar-toggler');
            var navbarCollapse = document.querySelector('#navbarNav');
    
            navbarToggler.addEventListener('click', function() {
                navbarCollapse.classList.toggle('show');
            });
    
            // Example: Log a message when the navbar is toggled
            navbarCollapse.addEventListener('shown.bs.collapse', function() {
                console.log('Navbar is now visible');
            });
    
            navbarCollapse.addEventListener('hidden.bs.collapse', function() {
                console.log('Navbar is now hidden');
            });
        });
    </script>
    </body>
</html>